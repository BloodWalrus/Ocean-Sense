<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/experimental">

        <SwitchPreferenceCompat
            android:summary="@string/augmented_reality_description"
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_enable_augmented_reality_tool"
            app:singleLineTitle="false"
            app:title="@string/augmented_reality" />

        <SwitchPreferenceCompat
            android:summary="@string/clinometer_augmented_reality_description"
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_clinometer_use_ar"
            app:singleLineTitle="false"
            app:title="@string/clinometer_augmented_reality" />

        <SwitchPreferenceCompat
            android:summary="@string/tool_metal_detector_title"
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_experimental_metal_direction"
            app:singleLineTitle="false"
            app:title="@string/pref_experimental_metal_direction_title" />

        <SwitchPreferenceCompat
            android:summary="@string/camera"
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_use_zero_shutter_lag"
            app:singleLineTitle="false"
            app:title="@string/zero_shutter_lag" />

        <SwitchPreferenceCompat
            android:summary="@string/tool_cliff_height_description"
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_cliff_height_enabled"
            app:singleLineTitle="false"
            app:title="@string/tool_cliff_height_title" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:disableDependentsState="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_use_filtered_gps"
            app:singleLineTitle="false"
            app:title="@string/smooth_gps_readings" />


    </PreferenceCategory>

</PreferenceScreen>